<Window x:Class="WorkWithDB.UI.Views.Login"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:viewModels="clr-namespace:WorkWithDB.UI.ViewModels"
        xmlns:i="http://schemas.microsoft.com/expression/2010/interactivity"
        xmlns:behaviors="clr-namespace:WorkWithDB.UI.Behaviors"
        Title="Login" Height="300" Width="300">
    <Window.DataContext>
        <viewModels:LoginVM />
    </Window.DataContext>
    <StackPanel>
        <Label>Login:</Label>
        <TextBox Text="{Binding Login}"></TextBox>
        <Label>Password:</Label>
        <PasswordBox >

            <i:Interaction.Behaviors>
                <behaviors:PasswordBehavior Password="{Binding Password, Mode=OneWayToSource}" />
            </i:Interaction.Behaviors>
        </PasswordBox>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Height="25">
            <Button Margin="0,0,16,0" 
                    Command="{Binding OkCommand,Mode=OneTime}" Padding="10,0">
                Ok 
            </Button>
            <Button Margin="0,0,16,0" Padding="10,0">
                Cancel
            </Button>
            <Button Padding="10,0">
                Register
            </Button>
        </StackPanel>
    </StackPanel>
</Window>
