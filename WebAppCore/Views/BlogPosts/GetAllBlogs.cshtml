




@using Ninject.Activation
@using WorkWithDB.Standard.Entity.Views
@model IList<WorkWithDB.Standard.Entity.Entities.BlogPost>



<!-- ... -->
<style>
    #cartTable td { vertical-align: middle; }
</style>

<!-- ... -->

<tbody>
    @foreach (var line in Model)
    {
    <div class="well">
        <h3>
            <strong>@line.Title</strong>

        </h3>
        @using (Html.BeginForm("GetblogPost", "BlogPosts"))
        {
            <div class="pull-right">
                @Html.Hidden("Id", line.Id)
                @Html.HiddenFor(x => line.Id)
                <input type="submit" class="btn btn-success" value="Детально" />
            </div>
        }
       
            <div class="pull-right">
                @Html.ActionLink("Удалить", "DeleteblogPost", "BlogPosts", new { line.Id }, new { @class = "btn btn-success" })
      
            </div>
        
        
    
            <div class="pull-right">

          
                @Html.ActionLink("Редактирование", "EditBlogPost", "BlogPosts", new { line.Id }, new { @class = "btn btn-success" })
                
            </div>
        
        <span class="lead">@line.Content </span>
    </div>
    }
    
<div class="pull-right">
@Html.ActionLink("Додати пост", "AddBlogPost", "BlogPosts", null, new { @class = "btn btn-success" })
</div>
   
</tbody>
