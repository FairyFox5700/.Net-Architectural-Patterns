@using WorkWithDB.Standard.Entity.Views
@model IList<WorkWithDB.Standard.Entity.Entities.BlogPost>

@{  
    ViewBag.Title = "Blog posts";
}

<h2>title</h2>
<table>
    <thead>
    <td>Title</td>
    <td>Author</td>

    </thead>
    <tbody>
    @foreach (var post in Model)
    {
        <tr>
            <td>
                @Html.ActionLink(post.Title, "GetblogPost", new { id = post.Id })

            </td>
            <td>@post.Content</td>
        </tr>
    }


    </tbody>
